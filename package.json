{
  "name": "serial-adapter",
  "display_name": "Serial",
  "version": "0.4.0",
  "description": "Serial MCU Adapter",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "serial"
  ],
  "author": "Mozilla IoT",
  "license": "MPL-2.0",
  "homepage": "https://github.com/mozilla-iot/serial-adapter",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/serial-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/serial-adapter/issues"
  },
  "dependencies": {
    "serialport": "^7.1.5"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.2.1"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "serial-adapter.js",
    "packet.js",
    "list-ports.js",
    "utils.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "ports": [
        {
          "name": "arduino-usb",
          "manufacturer": "Arduino"
        }
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "manufacturer": {
                "type": "string"
              },
              "vendorId": {
                "type": "string"
              },
              "productId": {
                "type": "string"
              },
              "serialNumber": {
                "type": "string"
              },
              "comName": {
                "type": "string"
              },
              "baudRate": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    }
  }
}
